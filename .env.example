# 数据库配置
DATABASE_URL="postgresql://user:password@localhost:5432/doc_mcp?schema=public"

# Chat API 配置（用于生成摘要等）
# 可以使用 OpenAI、Azure OpenAI、或其他兼容的 API
CHAT_API_KEY="your-chat-api-key"
CHAT_API_BASE_URL="https://api.openai.com/v1"
CHAT_MODEL="gpt-4o-mini"

# Embedding API 配置（用于生成向量嵌入）
# 可以与 Chat API 使用不同的供应商
EMBEDDING_API_KEY="your-embedding-api-key"
EMBEDDING_API_BASE_URL="https://api.openai.com/v1"
EMBEDDING_MODEL="text-embedding-3-small"

# 服务配置
PORT=3000

# 摘要配置
SUMMARY_MAX_TOKENS=200

# 切割配置 (JSON格式)
# 支持多种切割策略，每种策略包含:
# - parentChunkSize: 父块大小（字符数）
# - childChunkSize: 子块大小（字符数）
# - overlapPercent: 重叠百分比（0-100）
# - name: 策略名称（可选）
CHUNK_STRATEGIES='[{"parentChunkSize": 2000, "childChunkSize": 500, "overlapPercent": 20, "name": "small"}, {"parentChunkSize": 4000, "childChunkSize": 1000, "overlapPercent": 20, "name": "medium"}]'

